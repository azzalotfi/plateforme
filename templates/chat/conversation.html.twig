{% extends 'base.html.twig' %}

{% block title %}Conversation - ServicePro{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/chat.css') }}?v={{ 'now'|date('U') }}" rel="stylesheet">
{% endblock %}

{% block body %}
{% include 'partials/header.html.twig' %}

<div class="chat-container">
    <div class="chat-sidebar">
        <div class="chat-header">
            <a href="{{ path('app_chat') }}" class="back-button">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h2><i class="bi bi-chat-dots"></i> Conversations</h2>
        </div>
        
        <div class="conversations-list">
            {# This would be populated with all conversations, but for simplicity showing current one #}
            {% set otherUser = app.user == conversation.client.user ? conversation.prestataire.user : conversation.client.user %}
            
            <div class="conversation-item active">
                <div class="conversation-avatar">
                    <i class="bi bi-person-circle"></i>
                </div>
                <div class="conversation-info">
                    <div class="conversation-name">
                        {{ otherUser.nom }} {{ otherUser.prenom }}
                    </div>
                    {% if conversation.service %}
                        <div class="conversation-service">
                            <i class="bi bi-briefcase"></i> {{ conversation.service.nomService }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    
    <div class="chat-main">
        <div class="chat-conversation-header">
            <div class="conversation-user-info">
                <div class="conversation-avatar-large">
                    <i class="bi bi-person-circle"></i>
                </div>
                <div>
                    <h3>{{ otherUser.nom }} {{ otherUser.prenom }}</h3>
                    {% if conversation.service %}
                        <p class="text-muted"><i class="bi bi-briefcase"></i> {{ conversation.service.nomService }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <div class="chat-messages" 
             id="chatMessages"
             data-conversation-id="{{ conversation.id }}"
             data-last-message-id="{{ conversation.messages|length > 0 ? conversation.messages|last.id : 0 }}">
            {% for message in conversation.messages %}
                <div class="message {% if message.sender == app.user %}message-mine{% else %}message-theirs{% endif %}" data-message-id="{{ message.id }}">
                    <div class="message-bubble group">
                        <div class="message-content">{{ message.content }}</div>
                        <div class="message-time">
                            {{ message.createdAt|date('H:i') }}
                            {% if message.sender == app.user %}
                                <span class="delete-message-btn" onclick="deleteMessage({{ message.id }})" title="Supprimer">
                                    <i class="bi bi-trash"></i>
                                </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        
        <div class="chat-input-container">
            <form id="chatForm" class="chat-input-form">
                <textarea 
                    id="messageInput" 
                    name="content" 
                    placeholder="Ã‰crivez votre message..." 
                    rows="1"
                    required></textarea>
                <button type="submit" class="send-button">
                    <i class="bi bi-send-fill"></i> Envoyer
                </button>
            </form>
        </div>
    </div>
</div>

{% include 'partials/footer.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/chat-conversation.js') }}?v={{ 'now'|date('U') }}"></script>
{% endblock %}
