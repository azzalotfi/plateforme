{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Admin - ServicePro{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/client-dashboard-provider-style.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
{% endblock %}

{% block body %}
{% include 'partials/header.html.twig' %}

<div class="dashboard-container">
    <!-- Welcome Section -->
    <div class="welcome-section">
        <h1>Bienvenue, {{ user.prenom }} {{ user.nom }} !</h1>
        <p>Tableau de bord Administrateur</p>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon" style="background: #dbeafe; color: #3b82f6;">
                <i class="bi bi-wallet2"></i>
            </div>
            <div class="stat-value">{{ totalGains|number_format(2, '.', ' ') }} TND</div>
            <div class="stat-label">Solde Total (Commissions)</div>
        </div>

        {# Placeholder for other admin stats #}
        <div class="stat-card">
            <div class="stat-icon" style="background: #fef3c7; color: #f59e0b;">
                <i class="bi bi-people"></i>
            </div>
            <div class="stat-value">-</div>
            <div class="stat-label">Utilisateurs</div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background: #d1fae5; color: #10b981;">
                <i class="bi bi-briefcase"></i>
            </div>
            <div class="stat-value">-</div>
            <div class="stat-label">Services</div>
        </div>
        
         <div class="stat-card">
            <div class="stat-icon" style="background: #e0e7ff; color: #6366f1;">
                <i class="bi bi-gear"></i>
            </div>
            <div class="stat-value">-</div>
            <div class="stat-label">Paramètres</div>
        </div>
    </div>
    
    <div class="section">
        <div class="section-header">
            <h2 class="section-title">
                <i class="bi bi-info-circle"></i>
                <span>Information</span>
            </h2>
        </div>
        <div class="empty-state">
             <i class="bi bi-cone-striped"></i>
            <p>D'autres fonctionnalités d'administration seront bientôt disponibles.</p>
        </div>
    </div>

</div>

{% include 'partials/footer.html.twig' %}
{% endblock %}
