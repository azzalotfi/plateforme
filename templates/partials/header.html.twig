<!-- Header -->
{% block stylesheets %}
    <link href="{{ asset('css/register.css') }}" rel="stylesheet">
    <link href="{{ asset('css/profile.css') }}" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="{{ asset('css/app.css') }}" rel="stylesheet">
{% endblock %}
<header class="header">
    <div class="containerr">
        <div class="header-content">
            <a href="{{ path('home') }}" class="logo">
                <div class="logo-icon">
                    <svg viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect width="40" height="40" rx="10" fill="url(#logoGradient)"/>
                        <path d="M12 20 L20 12 L28 20 M20 12 L20 28" stroke="white" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" opacity="0.9"/>
                        <defs>
                            <linearGradient id="logoGradient" x1="0" y1="0" x2="40" y2="40" gradientUnits="userSpaceOnUse">
                                <stop offset="0%" stop-color="#8b5cf6"/>
                                <stop offset="100%" stop-color="#ec4899"/>
                            </linearGradient>
                        </defs>
                    </svg>
                </div>
                <span class="logo-text">ServicePro</span>
            </a>
            <nav class="nav">
                <a href="{{ path('home') }}" class="nav-link {% if app.request.attributes.get('_route') == 'home' %}active{% endif %}">Accueil</a>
                <a href="{{ path('services') }}" class="nav-link {% if app.request.attributes.get('_route') == 'services' %}active{% endif %}">Services</a>
            </nav>
            <div class="header-actions">
                 {% if app.user and app.user.role == 'client' %}
                <a href="{{ path('app_dashboard') }}">Tableau de bord</a>
            {% endif %}
        </div>
        <nav class="nav">
            {% if app.user %}
                  <a href="{{ path('paiement') }}">Paiement</a>
           
            <div class="nav-right">
                <a href="{{ path('app_profile') }}">Mon Profil</a>
               
            </div>
             {% endif %}
        </nav>
                    {# User is not logged in - show login/register #}
                    <select id="langSelect" class="lang-toggle" style="padding:6px 10px;border:1px solid #e5e7eb;border-radius:8px;background:#fff;cursor:pointer;">
                        <option value="fr">Français</option>
                        <option value="en">English</option>
                    </select>
                    
                   {% if not app.user %}
    <a href="{{ path('app_login') }}" class="login-link">Connexion</a>
    <a href="{{ path('app_register') }}" class="signup-btn">S'inscrire</a>
{% endif %}
<nav class="nav">
            {% if app.user %}
              
                <a href="{{ path('app_logout') }}" class="signup-btn">Déconnexion</a>
            </div>
             {% endif %}
        </nav>
            </div>
        </div>
    </div>
</header>

