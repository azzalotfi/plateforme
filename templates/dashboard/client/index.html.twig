{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - ServicePro{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/register.css') }}" rel="stylesheet">
    <link href="{{ asset('css/dashboard.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
{% endblock %}

{% block body %}
{% include 'partials/header.html.twig' %}
<div class="dashboard-container">
    

    <!-- MAIN CONTENT -->
    <main class="dashboard-main">
        <div class="dashboard-wrapper">
            <!-- Welcome Section -->
            <div class="welcome-section">
                <h1>Bienvenue, {{ user.nom ?: user.email }} !</h1>
                <p>Voici un aperçu de vos activités</p>
            </div>

            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                    <div class="stat-content">
                        <h3>{{ stats.totalReservations }}</h3>
                        <p>Total Réservations</p>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-clock-history"></i>
                    </div>
                    <div class="stat-content">
                        <h3>{{ stats.reservationsEnCours }}</h3>
                        <p>En Cours</p>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <div class="stat-content">
                        <h3>{{ stats.reservationsCompletees }}</h3>
                        <p>Complétées</p>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="bi bi-currency-euro"></i>
                    </div>
                    <div class="stat-content">
                        <h3>{{ stats.montantTotal|number_format(2, ',', ' ') }} TND</h3>
                        <p>Montant Total</p>
                    </div>
                </div>
            </div>

            <!-- Content Grid -->
            <div class="content-grid">
                <!-- Recent Reservations -->
                <div class="content-card">
                    <div class="card-header">
                        <h2><i class="bi bi-list-ul"></i> Réservations Récentes</h2>
                        <a href="#" class="view-all">Voir tout</a>
                    </div>
                    <div class="card-body">
                        {% if reservations|length > 0 %}
                            <div class="reservations-list">
                                {% for reservation in reservations %}
                                    <div class="reservation-item">
                                        <div class="reservation-info">
                                            <h4>{{ reservation.service ? reservation.service.nomService : 'Service' }}</h4>
                                            <p class="reservation-date">
                                                <i class="bi bi-calendar"></i> 
                                                {{ reservation.dateReservation ? reservation.dateReservation|date('d/m/Y') : 'N/A' }}
                                                {% if reservation.heure %}
                                                    <i class="bi bi-clock"></i> 
                                                    {{ reservation.heure|date('H:i') }}
                                                {% endif %}
                                            </p>
                                            <p class="reservation-status status-{{ reservation.statut|lower|replace({' ': '-'}) }}">
                                                {{ reservation.statut ?: 'En attente' }}
                                            </p>
                                        </div>
                                        <div class="reservation-amount">
                                            <strong>{{ reservation.montantTotal ? (reservation.montantTotal ~ ' TND') : 'N/A' }}</strong>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="empty-state">
                                <i class="bi bi-inbox"></i>
                                <p>Aucune réservation pour le moment</p>
                                <a href="/services" class="btn-primary">Explorer les services</a>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Available Services -->
                <div class="content-card">
                    <div class="card-header">
                        <h2><i class="bi bi-grid"></i> Services Disponibles</h2>
                        <a href="/services" class="view-all">Voir tout</a>
                    </div>
                    <div class="card-body">
                        {% if services|length > 0 %}
                            <div class="services-grid">
                                {% for service in services %}
                                    <div class="service-card">
                                        <div class="service-icon">
                                            <i class="bi bi-tools"></i>
                                        </div>
                                        <h4>{{ service.nomService }}</h4>
                                        <p class="service-category">{{ service.categorie ?: 'Général' }}</p>
                                        <p class="service-price">{{ service.prix ? (service.prix ~ ' TND') : 'Prix sur demande' }}</p>
                                        <a href="#" class="service-btn">Réserver</a>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="empty-state">
                                <i class="bi bi-inbox"></i>
                                <p>Aucun service disponible pour le moment</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
{% include 'partials/footer.html.twig' %}
{% endblock %}

