{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - ServicePro{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/client-dashboard-provider-style.css') }}" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
{% endblock %}

{% block body %}
{% include 'partials/header.html.twig' %}

<div class="dashboard-container">
    <!-- Welcome Section -->
    <div class="welcome-section">
        <h1><span data-i18n="dashboard_welcome_prefix">Bienvenue, </span>{{ user.nom ?: user.email }} !</h1>
        <p data-i18n="dashboard_overview">Voici un aperçu de vos activités</p>
    </div>

    <!-- Stats Grid -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon" style="background: #dbeafe; color: #3b82f6;">
                <i class="bi bi-calendar-check"></i>
            </div>
            <div class="stat-value">{{ stats.totalReservations }}</div>
            <div class="stat-label" data-i18n="dashboard_stat_reservations">Total Réservations</div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background: #fef3c7; color: #f59e0b;">
                <i class="bi bi-clock-history"></i>
            </div>
            <div class="stat-value">{{ stats.reservationsEnCours }}</div>
            <div class="stat-label" data-i18n="dashboard_stat_pending">En Cours</div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background: #d1fae5; color: #10b981;">
                <i class="bi bi-check-circle"></i>
            </div>
            <div class="stat-value">{{ stats.reservationsCompletees }}</div>
            <div class="stat-label" data-i18n="dashboard_stat_completed">Complétées</div>
        </div>

        <div class="stat-card">
            <div class="stat-icon" style="background: #e0e7ff; color: #6366f1;">
                <i class="bi bi-currency-euro"></i>
            </div>
            <div class="stat-value">{{ stats.montantTotal|number_format(2, ',', ' ') }} TND</div>
            <div class="stat-label" data-i18n="dashboard_stat_total">Dépenses Totales</div>
        </div>
    </div>

    <!-- Recent Reservations -->
    <div class="section">
        <div class="section-header">
            <h2 class="section-title">
                <i class="bi bi-list-ul"></i>
                <span data-i18n="dashboard_recent_reservations">Réservations Récentes</span>
            </h2>
            <a href="#" class="view-all" data-i18n="dashboard_view_all">Voir tout</a>
        </div>

        {% if reservations|length > 0 %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Service</th>
                        <th>Date</th>
                        <th>Heure</th>
                        <th>Montant</th>
                        <th>Statut</th>
                    </tr>
                </thead>
                <tbody>
                    {% for reservation in reservations %}
                        <tr>
                            <td style="font-weight: 600; color: #1f2937;">
                                {{ reservation.service ? reservation.service.nomService : 'Service supprimé' }}
                            </td>
                            <td>{{ reservation.dateReservation ? reservation.dateReservation|date('d/m/Y') : 'N/A' }}</td>
                            <td>{{ reservation.heure ? reservation.heure|date('H:i') : '-' }}</td>
                            <td style="font-weight: 600; color: #4f46e5;">
                                {{ reservation.montantTotal ? (reservation.montantTotal ~ ' TND') : '-' }}
                            </td>
                            <td>
                                <span class="status-badge status-{{ reservation.statut|lower|replace({' ': '-', 'é': 'e'}) }}">
                                    {{ reservation.statut ?: 'En attente' }}
                                </span>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <div class="empty-state">
                <i class="bi bi-inbox"></i>
                <p data-i18n="dashboard_empty_reservations">Aucune réservation pour le moment</p>
                <a href="/services" class="service-btn" data-i18n="dashboard_btn_explore">Explorer les services</a>
            </div>
        {% endif %}
    </div>

    <!-- Available Services -->
    <div class="section">
        <div class="section-header">
            <h2 class="section-title">
                <i class="bi bi-grid"></i>
                <span data-i18n="dashboard_available_services">Services Disponibles</span>
            </h2>
            <a href="/services" class="view-all" data-i18n="dashboard_view_all">Voir tout</a>
        </div>

        {% if services|length > 0 %}
            <div class="services-grid">
                {% for service in services %}
                    <div class="service-card">
                        <div class="service-icon">
                            <i class="bi bi-tools"></i>
                        </div>
                        <h4>{{ service.nomService }}</h4>
                        <p class="service-category">{{ service.categorie ?: 'Général' }}</p>
                        <p class="service-price">{{ service.prix ? (service.prix ~ ' TND') : 'Sur devis' }}</p>
                        <a href="{{ path('app_service_show', {'id': service.id}) }}" class="service-btn" data-i18n="dashboard_service_btn">Réserver</a>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-state">
                <i class="bi bi-inbox"></i>
                <p data-i18n="dashboard_empty_services">Aucun service disponible pour le moment</p>
            </div>
        {% endif %}
    </div>
</div>

{% include 'partials/footer.html.twig' %}
{% endblock %}

